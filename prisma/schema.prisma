generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  created_at DateTime @default(now()) 
  posts Post[]
}

model Post{
  id Int @id @default(autoincrement())
  title String
  body String
  user_id Int
  category_id Int
  created_at DateTime @default(now())
  categorys Categories @relation(fields: [category_id],references: [id])
  user Users @relation(fields: [user_id],references: [id])
}

model Categories {
  id Int @id @default(autoincrement())
  name_category String?
  created_at DateTime @default(now())
  posts Post[]
}
